<div class="index_container">
  <h2>ルーム情報一覧</h2>
  <div class="rooms">
    <% @room_registrations.each do |room_registration| %>
      <div class="room">
        <div class="id"><%= room_registration.id %></div>
        <div class="room_image"><%= image_tag room_registration.room_image.thumb300.url %></div>
        <div class="room_name"><%= room_registration.room_name %></div>
        <div class="room_address"><%= room_registration.room_address %></div>
        <div class="room_introduction"><%= room_registration.room_introduction %></div>
        <div class="room_price">￥<%= room_registration.room_price %></div>
        <%= link_to "予約", room_registration %>
        <%= link_to "削除", room_registration, method: :delete, data: { confirm: "本当に削除しますか？" } %>
      </div>
    <% end %>
  </div>
</div>
 
